<h4>Location info</h4>

<div class="items">  
  <%= f.nested_fields_for :locations do |f| %>
    <fieldset class="item">
      <%= f.label :address1, "Address" %>
      <%= f.text_field :address1, :class => "input-xlarge" %><br />
      <%= f.text_field :address2, :class => "input-xlarge" %>

      <%= f.label :city %>
      <%= f.text_field :city, :class => "input-xlarge" %><br />
      <%= f.label :state, "State/Zip" %>
      <%= f.select :state, Location::STATES, {}, { :class => "input-medium state-select" } %>
      <%= f.text_field :zip, :class => "input-small" %>
      
      <%= f.label :phone %>
      <%= f.text_field :phone, :class => "input-xlarge" %>

      <br />
      <%= link_to "Remove", "#", :class => "remove" %>

      <%= f.hidden_field :id %>
      <%= f.hidden_field :_destroy %>
    </fieldset>
  <% end %>
  <%= link_to "Add location", "#", :class => "add" %>
</div>
