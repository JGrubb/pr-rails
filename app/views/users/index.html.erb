<h2 class="pagetitle">Users</h2>

<table class="table">
  <tr>
    <th>Last name</th>
    <th>First name</th>
    <th>User</th>
    <th>role</th>
    <th>Verified?</th>
    <th></th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.last_name %></td>
    <td><%= user.first_name %></td>
    <td><%= mail_to user.email %></td>
    <td><%= user_role %></td>
    <td><%= current_user.verified? %></td>
    <td><%= link_to "edit user", user_edit_path(user) %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @users %>
